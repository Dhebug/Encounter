INLINE ptst%,60
'
' D‚coupage des icones (18x18) en 256 couleurs. [Dessin‚es avec DELMPAINT !]
'
' ½ 1993 Dbug II
'
' VERTICAL  = 256
' MODE_ST   = 128
' OVERSCAN  =  64
' PAL       =  32   NTSC  = 0
' VGA       =  16   RVB   = 0
' L_640     =   8   L_320 = 0
' C_65536  = 4
' C_256    = 3
' C_16     = 2
' C_4      = 1
' C_2      = 0
'
RESERVE 100000
'
frez=XBIOS(88,-1)
xb%=XBIOS(2)
'
fmode=3+32
ecran%=MALLOC(64000)
IF ecran%<=0
  ALERT 1,"Plus de m‚moire!",1,"Gasp",rep&
  EDIT
ENDIF
ON BREAK GOSUB fin
ON ERROR GOSUB fin
'
~XBIOS(5,L:ecran%,L:ecran%,3,fmode)
OPEN "i",#1,"E:\PROJETS\REMBRAND\divers\icones.pi9"
c$=SPACE$(4096)
palette%=V:c$
BGET #1,palette%,1024
FOR i=0 TO 255
  SLPOKE ADD(&HFFFF9800,i*4),LONG{ADD(palette%,i*4)}
NEXT i
BGET #1,ecran%,64000
CLOSE
'
RESTORE
'
FOR colonne&=0 TO 13
  FOR ligne&=0 TO 8
    READ n$
    EXIT IF n$="*"
    OPEN "o",#1,"E:\PROJETS\REMBRAND\FICHIERS.INC\ICONES\"+n$+".ICN"
    OUT& #1,18
    OUT& #1,18
    col&=colonne&*22
    lig&=ligne&*22
    BOX col&,lig&,col&+22,lig&+22
    FOR y&=0 TO 17
      FOR x&=0 TO 0 !17
        adr_col%=ADD(palette%,C:ptst%(L:ecran%,W:ADD(2,ADD(lig&,y&)),W:ADD(2,ADD(col&,x&)))*4)
        r&=SHR(BYTE{adr_col%},3)
        v&=SHR(BYTE{SUCC(adr_col%)},2)
        b&=SHR(BYTE{ADD(adr_col%,3)},3)
        OUT& #1,SHL(r&,11) OR SHL(v&,5) OR SHL(b&,0)
        '        PRINT AT(1,20);colonne&;"-";r&;" ";v&;" ";b&;"                  "
        '        ~INP(2)
      NEXT x&
    NEXT y&
    CLOSE
  NEXT ligne&
  EXIT IF n$="**"
NEXT colonne&
'
fin
'
> PROCEDURE fin
  ~XBIOS(5,L:xb%,L:xb%,3,frez)
  ~MFREE(ecran%)
  EDIT
RETURN
